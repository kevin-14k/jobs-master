      %h1= @hero.name

    %p.card-text
      %strong Points de vie :
      = @hero.health

    %p.card-text
      %strong Points d'attaque :
      = @hero.attack_power

    %p.card-text
      %strong Critical Chances :
      = @hero.crit

    %p.card-text
      %strong Accuraty :
      = @hero.accuraty

